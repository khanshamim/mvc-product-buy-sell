@model string
@{
    ViewBag.Title = "Home Page";
}

<h2>Hello,</h2>

<p>
    Have a nice day
</p>
<div class="container">
    <div class="row">
        <div class="col-md-12 pull-up">


        </div>
    </div>
    <div class="row">
        <div class="col-md-12 enable-buy">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title">Select a Product</h3>
                </div>
                <div class="panel-body">
                    <form>
                        <fieldset>
                            <div class="form-group">
                                <input type="radio" id="rad-1" name="stocks" value="1" />
                                <label for="1">ItemA</label>
                            </div>

                            <div class="form-group">
                                <input type="radio" id="rad-2" name="stocks" value="2" />
                                <label for="2">ItemB</label>
                            </div>

                            <div class="form-group">
                                <label for="txt_Qty">Enter product Quantity:</label>
                                <input class="form-control" type="text" id="txt_Qty" placeholder="Quantity" required />
                            </div>
                            <div>
                                <button id="btn_Buy" class="btn-primary btn" onclick="stocksModule.Buy(); return false;">BUY</button>
                                <button id="btn_Sell" class="btn-primary btn" onclick="stocksModule.Sell();return false;">SELL</button>
                            </div>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 enable-sell">
            @* Live Current Stocks *@
            <h2>Current stocks</h2>
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title">Current stocks</h3>
                </div>
                <div class="panel-body">
                    <div id="stocks">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>Item Name</th>
                                    <th>Quantity</th>
                                    <th>Price</th>
                                    <th>Base Price</th>
                                </tr>
                            </thead>
                            <tbody>                             
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>


        </div>
    </div>

</div>
@Scripts.Render("~/bundles/app/stock")

